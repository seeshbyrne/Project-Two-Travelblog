<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="edit-header">
    <h1>Edit Post</h1>
    </div>

    <div class="edit-post">
    <form action="/posts/<%= post._id %>?_method=PUT" method="post" class="d-flex flex-column gap-3">

        <div class="mb-3">
            <label class="form-label">City:</label>
            <input class="form-control" name="city" required value="<%= post.city %>">
        </div>

        <div class="mb-3">
        <label class="form-label">Country:</label>
            <input class="form-control" name="country" required value="<%= post.country %>">
        </div>

        <div class="mb-3">
        <label class="form-label">Accommodation Ideas:</label>
            <input class="form-control" name="accommodation" value="<%= post.accommodation %>">
        <div>
            <% post.staySuggestions.forEach(suggestion => { %>
                <input class="form-control" name="staySuggestions[<%= suggestion._id %>]" value="<%= suggestion.suggestion %>">
            <% }) %>
        </div>
    </div>

        <div class="mb-3">
        <label class="form-label">Food Suggestions:</label>
            <input class="form-control" name="food" value="<%= post.food %>">
        <div>
            <% post.foodSuggestions.forEach(suggestion => { %>
                <input class="form-control" name="foodSuggestions[<%= suggestion._id %>]" value="<%= suggestion.suggestion %>">
            <% }) %>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Top Tips:</label>
        <textarea class="form-control" name="tips"><%= post.tips %></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Image:</label>
        <input class="form-control" type="file" name="image">
    </div>
        <button>Update Post</button>
    </form>
    </div>

</body>
</html>